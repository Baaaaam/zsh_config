#!/bin/zsh
#
function =
{
	echo "$@" | root -l
}
alias calcul="="


function c_git
{
  
  if [ $# -eq 1 ]; then
    curl -u 'Baaaaam' https://api.github.com/user/repos -d '{"name":"'$@'"}'
    git clone git@github.com:Baaaaam/${@}.git
  else
    if [ ! -d ".git" ]; then
      git init
    fi
    curl -u 'Baaaaam' https://api.github.com/user/repos -d '{"name":"'${PWD##*/}'"}'
    git remote add origin git@github.com:Baaaaam/${PWD##*/}.git
  fi


}

